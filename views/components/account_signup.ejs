<div class="input-group" id="signin_form">
    <label for="userName" class="input-group__label">User Name:</label>
    <input type="text" id="userName" class="input-group__input" required>

    <label for="userEmail" class="input-group__label">E-mail:</label>
    <input type="text" id="userEmail" class="input-group__input" required>

    <label for="userPwd" class="input-group__label">Password:</label>
    <input type="password" id="userPwd" class="input-group__input" required>

    <label for="userPwd2" class="input-group__label">Confirm password:</label>
    <input type="password" id="userPwd2" class="input-group__input">

    <label for="remenberMe" class="input-group__label --checkbox">
        <input type="checkbox" name="remenberMe" id="remenberMe" required>
        <span>Remenber me</span>
    </label>
    <label for="newsLetters" class="input-group__label --checkbox">
        <input type="checkbox" name="newsLetters" id="newsLetters">
        <span>Send me some... news of course</span>
    </label>
    <button class="button"> sigin up! </button>
</div>