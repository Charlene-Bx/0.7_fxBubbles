                    <h3>Nom de l'evenement</h3>
                    <div>
                        <button>...</button>
                        <button>sup</button>
                        <button>modif</button>
                    </div>
                </div>
                
            </div>

        </section>
    </main>
    <script src="/lodash/lodash.js" type="text/javascript"></script>
    <script src="/cloudinary-core/cloudinary-core.js" type="text/javascript"></script>
    <script src="../js/cloudinary.js"></script>
