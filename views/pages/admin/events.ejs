    <main class="imposter">

        <section class="events" id="events_add">
            <header>
                <h2>Ajouter un evenement:</h2>
            </header>

            <form class="input-group" action="/admin/event/new" method="POST">
                <input class="input-group__input" type="date" name="date"> 
                
                
                <input class="input-group__input" type="text" name="title" placeholder="Nom de l'évenement">
            </br>
                <input class="input-group__input" type="text" name="place" placeholder="Lieu">
                <input class="input-group__input" type="text" name="content" placeholder="Description de l'évenement">
                <input class="input-group__input" type="text" name="description" placeholder="Description de l'évenement">
            </br>
                <select class="input-group__select" name="category">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
                <!-- ajout du form cloudinary -->

                <button class="button"> Ajouter cet evenement</button>



                <button id="upload_widget" class="cloudinary-button">Upload files</button>

            </form>

        </section>
    
        <section class="events" id="events_remove">
            <header>
                <h2>Tous les evenements:</h2>
            </header>

            <% events.forEach(event => { %>
                <div>
                    <time><%= event.date %></time>
                    <div>
                        <h3><%= event.title %></h3>
                        <div>
                            <button>...</button>
                            <button>sup</button>
                            <button>modif</button>
                        </div>
                    </div>
                    
                </div>
            <% }) %>
            <div>
                <time>03/12</time>
